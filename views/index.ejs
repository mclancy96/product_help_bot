<%- include('partials/header', {pageTitle:'Enter DPCI'}) %>
<h1 class="text-center">Product Help Page</h1>
<h2 class="text-center">Enter Your Product Information Below:</h2>
<div class="container">
  <div class="mb-3 justify-content-center text-center container">
    <form action="/product" method="POST">

      <div class="row g-3 m-1">
        <div class="col-3"></div>
        <div class="col-auto">
          <label for="dpci" class="col-form-label">DPCI</label>
        </div>
        <div class="col-auto">
          <div class="input-group mb-3">
            <input type="text" name="dpci" class="form-control" id="dpci" placeholder="123-45-6789" pattern="[0-9]{3}-[0-9]{2}-[0-9]{4}" />
          </div>
          <div class="form-text" id="dpci help">Must be in the form "###-##-####"</div>
        </div>
      </div>

      <hr>

      <p class="text-center">Enter dates below. If a date is 'N/A', don't enter a date</p>

      <div class="row g-3 m-1">
        <div class="col-3"></div>
        <div class="col-auto">
          <label for="delivery" class="col-form-label">Delivery Date</label>
        </div>
        <div class="col-auto">
          <div class="input-group mb-3">
            <input type="date" name="delivery" class="form-control" id="delivery" />
          </div>
        </div>
      </div>

      <div class="row g-3 m-1">
        <div class="col-3"></div>
        <div class="col-auto">
          <label for="sold" class="col-form-label">Sold Date</label>
        </div>
        <div class="col-auto">
          <div class="input-group mb-3">
            <input type="date" name="sold" class="form-control" id="sold" />
          </div>
        </div>
      </div>

      <div class="row">
        <div>
          <button class="btn btn-primary" type="submit">Submit</button>
        </div>
      </div>

    </form>
  </div>
</div>
<%- include('partials/footer') %>